{
  "name": "SOLBLOCK",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Adblocker with Solana rewards",
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon.png",
    "64": "icon.png",
    "32": "icon.png",
    "16": "icon.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
